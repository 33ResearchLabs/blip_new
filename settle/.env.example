# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Option 1: Supabase/Railway/Neon (Production - use DATABASE_URL)
# Get from: Supabase Dashboard → Project Settings → Database → Connection string
# DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true

# Option 2: Local PostgreSQL (Development - use individual vars)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=settle
DB_USER=postgres
DB_PASSWORD=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3002

# Pusher Configuration (Real-time WebSocket)
# Get from: https://dashboard.pusher.com
PUSHER_APP_ID=your_app_id
PUSHER_SECRET=your_secret
NEXT_PUBLIC_PUSHER_KEY=your_key
NEXT_PUBLIC_PUSHER_CLUSTER=ap2

# Cloudinary Configuration (Image Uploads)
# Get from: https://console.cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# ============================================
# Solana/Wallet Configuration
# ============================================

# Network: 'devnet' for testing, 'mainnet-beta' for production
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# RPC Endpoints - Use Helius for faster transactions
# Get your free API key from https://helius.xyz
NEXT_PUBLIC_SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY
# For mainnet:
# NEXT_PUBLIC_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Blipscan Explorer URL (optional)
NEXT_PUBLIC_BLIPSCAN_URL=http://localhost:3003

# Mock Mode - Set to true to disable real wallet connections and use in-app balance
# Set to false or remove to restore real Solana wallet functionality
NEXT_PUBLIC_MOCK_MODE=true

# WalletConnect project ID - for mobile wallet support (optional)
# Get from: https://cloud.walletconnect.com
# NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Particle Network - Social Login (optional)
# Get from: https://dashboard.particle.network
# NEXT_PUBLIC_PARTICLE_PROJECT_ID=
# NEXT_PUBLIC_PARTICLE_CLIENT_KEY=
# NEXT_PUBLIC_PARTICLE_APP_ID=

# Compliance wallets for dispute resolution (comma-separated, optional)
# NEXT_PUBLIC_COMPLIANCE_WALLETS=wallet1,wallet2

# ============================================
# Debug Configuration (DEV ONLY)
# ============================================

# Debug key for accessing /dev/orders debug panel
# REQUIRED in development/staging, MUST NOT be set in production
# Generate with: openssl rand -hex 32
DEV_DEBUG_KEY=your_secret_debug_key_here

# ============================================
# Authentication & Security
# ============================================

# Admin credentials (change in production!)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=<strong-password-here>

# Admin token signing secret (REQUIRED in production)
# Generate with: openssl rand -hex 32
# ADMIN_SECRET=<random-secret-here>

# Compliance password (change in production!)
# COMPLIANCE_PASSWORD=<strong-password-here>

# Core API Backend Split
USE_CORE_API=0
CORE_API_URL=http://localhost:4010
CORE_API_PORT=4010
CORE_API_SECRET=

# Core API WebSocket (real-time order updates)
NEXT_PUBLIC_CORE_WS_URL=ws://localhost:4010/ws/orders

# Worker tuning
OUTBOX_BATCH_SIZE=50
OUTBOX_POLL_MS=5000
EXPIRY_BATCH_SIZE=20
EXPIRY_POLL_MS=10000
