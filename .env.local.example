# Core API Backend
USE_CORE_API=1
CORE_API_URL=http://localhost:4010
CORE_API_PORT=4010
CORE_API_SECRET=local-dev-secret

# Core API WebSocket (real-time order updates)
NEXT_PUBLIC_CORE_WS_URL=ws://localhost:4010/ws/orders

# Database (local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=settle
DB_USER=postgres
DB_PASSWORD=

# Mock Mode (use in-app balance, skip real Solana)
NEXT_PUBLIC_MOCK_MODE=true
NEXT_PUBLIC_SOLANA_NETWORK=devnet
